  table class="text-gray-800 dark:text-white table-auto"
    thead
      tr
        td
        td class="p-2" Title
        td class="p-2" Author(s)
    - reading.each do |book|
      tr
        td
          div class="rounded-md uppercase text-xs #{book.status_colour} px-2 w-full text-center"
            = book.status_label
        td
          a href="/post/#{book.slug}"
            = book.name
        td
          = book.authors
